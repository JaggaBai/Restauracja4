                    </div>*@
                    <div class="form-group">
                        <label asp-for="Cena" class="control-label"></label>
                        <input asp-for="Cena" class="form-control" />
                        <span asp-validation-for="Cena" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Dodaj w Menu" class="btn btn-outline-dark float-right" />
                        <a class=" btn btn-outline-primary" asp-action="Index">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
