        <p>
            <h1>Dodaj pozycje do menu</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="DodajwMenu">
                    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
