@model IEnumerable<Zamownie>
@{
    ViewData["Title"] = "Lista zamówień";
}

<div class="row">
    <div class=" col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DataZamowienia)</th>
                    <th>@Html.DisplayNameFor(model => model.KlientId)</th>
                 

                    <th>Wprowadź zmiany</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.DataZamowienia)</td>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.KlientId)</td>
         
                    <td class="align-middle">
                       
                        <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Usuń</a>
                    </td>
                </tr>

                }
            </tbody>

        </table>

    </div>

</div>