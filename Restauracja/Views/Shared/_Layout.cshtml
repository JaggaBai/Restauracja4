<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restauracja</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="PozycjeZamowienia" asp-action="Index">Restauracja</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-2">
                        <li class="navbar-nav flex-grow-2">
                            <a class="nav-link text-dark" asp-controller="PozycjeZamowienia" asp-action="Index"><i class="badge-info bi bi-hypnotize"></i> Menu </a>
                        </li>
                        <ul class="navbar-nav flex-grow-2">
                            <li class="navbar-nav flex-grow-2">
                                <a class="nav-link text-dark" asp-controller="Klienci" asp-action="Index"><i class="badge-info bi bi-person-square"></i> Stoliki </a>
                            </li>
                            <ul class="navbar-nav flex-grow-2">
                                <li class="navbar-nav flex-grow-2">
                                    <a class="nav-link text-dark" asp-controller="Zamownia" asp-action="Index"><i class="badge-info bi bi-gear"></i> Zamówienia </a>
                                </li>
                                </li>
                            </ul>
                            @*<form class="form-inline my-2 my-lg-0" asp-controller="PozycjeZamowienia" asp-Action="Filter" style="padding-right:25px;">
                                <input name="searchString" type="text" class="form-control" placeholder="Szukaj..." /> <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                            </form>*@
                </div>
                <form class="form-inline my-2 my-lg-0" asp-controller="PozycjeZamowienia" asp-Action="Filter" style="padding-right:25px;">
                    <input name="searchString" type="text" class="form-control" placeholder="Szukaj..." /> <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Restauracja 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
