@model IEnumerable<Klient>
@{ 
    ViewData["Title"] = "Lista klientów";
}

<div class = "row">
   <div class=" col-md-8">
       <table class="table">
           <thead>
               <tr>
                   <th>@Html.DisplayNameFor(model => model.KlientId)</th>
                   <th>@Html.DisplayNameFor(model => model.NumerStolika)</th>
                   <th>@Html.DisplayNameFor(model => model.Ocena)</th>
                   <th>Zmiany</th>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
               {
               <tr>
                   <td class="align-middle">@Html.DisplayFor(modelItem => item.KlientId)</td>
                   <td class="align-middle">@Html.DisplayFor(modelItem => item.NumerStolika)</td>
                   <td class="align-middle">@Html.DisplayFor(modelItem => item.Ocena)</td>
                   <td class="align-middle">
                       @*<a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edytuj</a>*@
                       <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Usuń</a>
                   </td>
               </tr>

               }
           </tbody>
          
       </table>

   </div>

</div>
